<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
         android:id="@+id/displayFromCurr"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignLeft="@+id/displayFromToCurrDesc"
         android:layout_alignParentTop="true"
         android:layout_marginLeft="24dp"
         android:text="NOK"
         android:textAppearance="?android:attr/textAppearanceLarge" />


     <TextView
         android:id="@+id/displayXrate"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_above="@+id/displayFromToCurrDesc"
         android:layout_alignParentRight="true"
         android:text="0.000"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/displayToCurr"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentTop="true"
         android:layout_centerHorizontal="true"
         android:text="INR"
         android:textAppearance="?android:attr/textAppearanceLarge" />

     <TextView
         android:id="@+id/toToStr"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignBaseline="@+id/displayFromCurr"
         android:layout_alignBottom="@+id/displayFromCurr"
         android:layout_marginLeft="22dp"
         android:layout_toRightOf="@+id/displayFromCurr"
         android:text=">>>>" />
    
</RelativeLayout>